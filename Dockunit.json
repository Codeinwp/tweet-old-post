      "prettyName": "Tweet Old Post w. PHP-FPM 5.6 WordPress Latest",
      "image": "dockunit/prebuilt-images:php-mysql-phpunit-wordpress-5.6-fpm",
      "beforeScripts": [
        "service mysql start",
        "wp cli update --yes --allow-root",
        "chmod +x /usr/local/bin/wp",
        "mkdir /temp",
        "mkdir /temp/wp",
        "wp core download --version=latest --path=/temp/wp --allow-root",
        "wp core config --path=/temp/wp --dbname=test --dbuser=root --allow-root",
        "wp core install --url=http://localhost --title=Test --admin_user=admin --admin_password=12345 --admin_email=test@test.com --path=/temp/wp --allow-root",
        "mkdir /temp/wp/wp-content/plugins/tweet-old-post",
        "cp -r . /temp/wp/wp-content/plugins/tweet-old-post"
      ],
      "testCommand": "wp plugin activate tweet-old-post --allow-root --path=/temp/wp && wp plugin get tweet-old-post --allow-root --path=/temp/wp && wp plugin deactivate tweet-old-post --allow-root --path=/temp/wp"
